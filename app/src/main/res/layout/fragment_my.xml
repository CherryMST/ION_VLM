<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_user_image"
        android:layout_height="184dp">

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="95dp"
            android:layout_centerInParent="true"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_user_image"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_below="@+id/iv_user_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bg_list">


        <ImageView
            android:id="@+id/iv_asset_management"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/item_assetsmanagement"/>

        <View style="@style/horizontal_line"/>
        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="53dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/item_feedback"/>

        <View style="@style/horizontal_line"/>
    </LinearLayout>

</LinearLayout>